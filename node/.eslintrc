{
    "extends": "eslint:recommended",

    "env" : {
        "node": true
    },

    "rules" : {
        "strict": [2, "global"],

        "quotes": [1, "single"],
        "key-spacing": [1, { "beforeColon" : true, "afterColon" : true }],
        "space-before-blocks": [1, "always"],
        "space-before-function-paren": [1, "always"],
        "keyword-spacing": 2,
        "semi" : [2, "always"],

        "max-statements": [1, 15],
        "max-depth": [1, 2],
        "complexity": [1, 5],
        "max-nested-callbacks": [1, 3],

        "no-console": 2,
        "no-warning-comments": 1,

        "consistent-this": [1, "self"],

        "valid-jsdoc": [1, { }],

        "block-scoped-var": 1,
        "default-case": 1,
        "handle-callback-err": 2,
        "no-lonely-if" : 2,
        "no-self-compare": 2,

        "no-sync": 2,

        "no-throw-literal": 1,

        "smells/no-setinterval": 1,
        "smells/no-this-assign": 1
    },

    "plugins" : [
        "smells"
    ]
}
